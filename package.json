{
  "name": "graphql-permission",
  "version": "0.0.1",
  "description": "A permission authorization management solution for GraphQL",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "build-watch": "babel src --watch --out-dir lib",
    "start": "npm run build && npm run test-build && npm run test",
    "test-build": "babel test --out-dir testout",
    "test-build-watch": "babel test --watch --out-dir testout",
    "test": "mocha testout/**/*.js",
    "test-watch": "mocha --watch testout/**/*.js",
    "watch": "npm run build-watch & npm run test-build-watch & npm run test-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joonhocho/graphql-permission.git"
  },
  "keywords": [
    "GraphQL",
    "auth",
    "authentication",
    "authorization",
    "permission",
    "access",
    "control"
  ],
  "author": "Joon Ho Cho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joonhocho/graphql-permission/issues"
  },
  "homepage": "https://github.com/joonhocho/graphql-permission#readme",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5"
  }
}
